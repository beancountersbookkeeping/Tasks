<% @new_task_title = flash[:new_task_title] %>
<% @new_task_recreate_task_days = flash[:new_task_recreate_task_days] %>
<div class="container"> 
 <h1>New Task</h1>
 <div class="col-sm-4">
  <%= form_for :anything, :method => 'POST', :class => 'form-inline', url: admin_create_task_path do |f| %>

  <div class="form-group">
    <%= f.select :company_id, options_for_select(Company.all.collect { | user | [user.name, user.id] }, 1), {}, {} %>
  </div>
   <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, value: @new_task_title, class: 'form-control', placeholder: "Enter title" %>
   </div>

   <div class="form-group"> 
    <%= f.label :recreate_task_days %>
    <%= f.text_field :recreate_task_days, value: @new_task_recreate_task_days, class: 'form-control', placeholder: "Enter days" %>
   </div>

    <%= f.submit "Save task", class: 'btn btn-success' %>
  <% end %>
 </div>
</div>
